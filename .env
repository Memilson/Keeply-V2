# =========================
# Docker Compose (Keeply-V2)
# =========================
KEEPly_DB_PORT=15432
KEEPly_AUTH_PORT=18081
KEEPly_WEB_PORT=18088

KEEPly_DB_NAME=keeply_auth
KEEPly_DB_USER=keeply
KEEPly_DB_PASSWORD=keeply123

# =========================
# Auth Service (Spring Boot)
# =========================
# Opcional ao rodar fora do docker-compose.
SERVER_PORT=8081

# Variaveis usadas no compose para o auth-service.
KEEPly_AUTH_PG_URL=jdbc:postgresql://keeply-pg:5432/keeply_auth?currentSchema=auth
KEEPly_AUTH_PG_USERNAME=keeply
KEEPly_AUTH_PG_PASSWORD=keeply123

# Alias padrao Spring (opcional; compose ja injeta)
SPRING_DATASOURCE_URL=jdbc:postgresql://keeply-pg:5432/keeply_auth?currentSchema=auth
SPRING_DATASOURCE_USERNAME=keeply
SPRING_DATASOURCE_PASSWORD=keeply123

# =========================
# Keeply App (SQLite/Desktop)
# =========================
# Nome do arquivo SQLite (fallback: DB_NAME)
KEEPLY_DB_NAME=data.keeply
DB_NAME=data.keeply

# Criptografia em repouso do banco local (0/1, false/true, etc)
KEEPLY_DB_ENCRYPTION=0

# Obrigatoria apenas se KEEPLY_DB_ENCRYPTION=1
KEEPLY_SECRET_KEY=
# Fallback legado para chave
SECRET_KEY=

# Diretorio opcional para dados locais
KEEPLY_DATA_DIR=
